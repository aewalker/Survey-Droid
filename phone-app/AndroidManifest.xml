<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

	android:versionCode="2" android:versionName="0.2" package="org.peoples.android">
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />	
	
	<!--
	Doesn't use these yet, but may want/need to in future
	 
	<uses-permission android:name="android.permission.BATTERY_STATS" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	
	-->
	
    <application android:icon="@drawable/icon" 
				android:label="@string/app_name" 
				android:debuggable="true"
				android:screenOrientation="portrait"
				android:configChanges="keyboardHidden|orientation">
		<!--  
			<receiver class="SMSApp">
	            <intent-filter>
	                <action android:value="android.provider.Telephony.SMS_RECEIVED" />
	            </intent-filter>
	        </receiver> 
        -->
        <receiver android:label="IncomingSMSTracker" android:name="IncomingSMSTracker" android:enabled="true">
			<intent-filter>
    			<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
		<receiver android:label="BootIntentReceiver" android:name="BootIntentReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<category android:name="android.intent.category.HOME" />
			</intent-filter>
		</receiver>
		<receiver android:label="SurveyReceiver" android:name=".survey.SurveyReceiver">
			<intent-filter>
				<action android:name="org.peoples.android.survey.ACTION_SCHEDULE_SURVEYS" />
			</intent-filter>
		</receiver>
		<receiver android:label="ComsReceiver" android:name=".coms.ComsReceiver">
			<intent-filter>
				<action android:name="org.peoples.android.coms.ACTION_UPLOAD_DATA" />
				<action android:name="org.peoples.android.coms.ACTION_DOWNLOAD_DATA" />
			</intent-filter>
		</receiver>
		<service android:label="SurveyScheduler" android:name=".survey.SurveyScheduler">
			<intent-filter>
				<action android:name="org.peoples.android.survey.ACTION_ADD_SURVEY" />
				<action android:name="org.peoples.android.survey.ACTION_SCHEDULE_SURVEYS" />
			</intent-filter>
		</service>
		<service android:name=".survey.SurveyService" android:label="SurveyService">
			<intent-filter>
				<action android:name="org.peoples.android.survey.ACTION_SURVEY_READY" />
				<action android:name="org.peoples.android.survey.ACTION_SHOW_SURVEY" />
				<action android:name="org.peoples.android.survey.ACTION_NEXT_QUESTION" />
				<action android:name="org.peoples.android.survey.ACTION_PREV_QUESTION" />
				<action android:name="org.peoples.android.survey.ACTION_SUBMIT_ANSWERS" />
			</intent-filter>
		</service>
		<service android:name=".coms.ComsService" android:label="ComsService">
			<intent-filter>
				<action android:name="org.peoples.android.coms.ACTION_UPLOAD_DATA" />
				<action android:name="org.peoples.android.coms.ACTION_DOWNLOAD_DATA" />
			</intent-filter>
		</service>
		<activity android:label="PEOPLES Survey Notification" android:name=".survey.NotificationActivity"></activity>
		<activity android:label="PEOPLES Survey" android:name=".survey.SingleChoiceActivity"></activity>
		<activity android:label="PEOPLES Survey" android:name=".survey.MultiChoiceActivity"></activity>
		<activity android:label="PEOPLES Survey" android:name=".survey.TextScaleActivity"></activity>
		<activity android:label="PEOPLES Survey" android:name=".survey.ImgScaleActivity"></activity>
		<activity android:label="PEOPLES Survey" android:name=".survey.FreeResponseActivity"></activity>
		<activity android:label="PEOPLES Survey" android:name=".survey.ConfirmSubmitActivity"></activity>
		<activity android:label="PEOPLES" android:name="MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:label="PEOPLES Settings" android:name="SettingsActivity"></activity>
		<activity android:label="PEOPLES" android:name="IDActivity"></activity>

	</application>
</manifest>