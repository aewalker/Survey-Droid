<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

	android:versionCode="1" android:versionName="1.0" package="com.peoples.android">
	<uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.BATTERY_STATS" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />

	<application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
		<receiver android:name="BootIntentReceiver" android:label="BootIntentReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>

		<service android:name="services.BootService">
			<intent-filter>
				<action android:name=".BootService" />
			</intent-filter>
		</service>
		
		<service android:name="services.CallLogService">
            <intent-filter>
                <action android:name=".CallLogService" />
            </intent-filter>
        </service>

		<activity android:name=".Peoples" android:label="@string/app_name">
		<!-- <activity android:name=".Peoples" android:label="@string/app_name"> -->

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".activities.MainActivity"></activity>
		<activity android:name=".activities.ConfirmSubmissionSurvey"></activity>
		<activity android:name=".processTest.LocationTestActivity"></activity>

		<activity android:name=".Peoples" android:label="@string/app_name"/>
		<activity android:name=".activities.SampleQuestionActivity"></activity>
		<activity android:name=".activities.SampleQuestionActivity2"></activity>
		<activity android:name=".activities.SampleQuestionActivity3"></activity>
		<activity android:name=".activities.SampleQuestionActivity4"></activity>
		<activity android:name="processTest.LocationTestActivity"></activity>
		
		<service android:name="services.GPSLocationService" android:label="GPSLocationService">
			
			<!-- <intent-filter>
				<action android:name=".activities.MainActivity" />
			</intent-filter> -->
		</service>

	</application>
</manifest>
