<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/img_scale_topLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal|center_vertical">
    <TextView
	    android:text="@string/question_loading_text"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:layout_height="wrap_content"
	    android:id="@+id/img_scale_question"
	    android:layout_width="wrap_content"
	    android:layout_gravity="center"
	    android:layout_weight="1"></TextView>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:id="@+id/img_scale_textLayout">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/img_scale_lowTextLayout"
			android:layout_weight="1"
			android:gravity="left">
		    <ImageView
		    	android:layout_width="wrap_content"
		    	android:id="@+id/img_scale_lowImg"
		    	android:layout_height="wrap_content"></ImageView>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/img_scale_highTextLayout"
			android:layout_weight="1"
			android:gravity="right">
		    <ImageView
		    	android:layout_width="wrap_content"
		    	android:id="@+id/img_scale_highImg"
		    	android:layout_height="wrap_content"></ImageView>
		</LinearLayout>
	</LinearLayout>
	<SeekBar
		android:id="@+id/img_scale_slider"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:progress="50"></SeekBar>
	
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/img_scale_buttonsLayout"
    	android:layout_weight="1"
    	android:layout_gravity="center">
        <Button
        	android:id="@+id/img_scale_backButton"
        	android:text="@string/question_backButton"
        	android:layout_height="wrap_content"
        	android:layout_width="100dip"
        	android:layout_weight="1"
        	android:layout_gravity="center"></Button>
        <Button
        	android:id="@+id/img_scale_nextButton"
        	android:text="@string/question_nextButton"
        	android:layout_height="wrap_content"
        	android:layout_width="100dip"
        	android:layout_weight="1"
        	android:layout_gravity="center"></Button>
    </LinearLayout>
</LinearLayout>